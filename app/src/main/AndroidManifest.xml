<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.alinadorozhkina.tula_steel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/label"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/label"
        android:supportsRtl="true"
        android:theme="@style/Theme.TulaSteel">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PictureActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ProductActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.TulaSteel.NoActionBar" />
    </application>

</manifest>