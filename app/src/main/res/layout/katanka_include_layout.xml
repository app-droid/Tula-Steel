                    app:layout_constraintTop_toBottomOf="@id/linear_number4">

                    <TextView
                        android:id="@+id/tv_length4"
                        style="@style/TextTableTitle"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Диаметр, мм" />

                    <TextView
                        android:id="@+id/tv_length_value4"
                        style="@style/TextTableTitle.Value"
                        android:layout_width="wrap_content"
