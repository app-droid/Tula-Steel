                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="НТД" />

                    <TextView
                        android:id="@+id/tv_NTD_value3"
                        style="@style/TextTableTitle.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="2dp"
                        android:text="ГОСТ 1050-2013;ГОСТ 4543-2016;ГОСТ 10702-2016 ASTM A510: SAE 1018-1026" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_NTD3">

                    <TextView
                        android:id="@+id/tv_number3"
                        style="@style/TextTableTitle"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Марка стали" />

                    <TextView
                        android:id="@+id/tv_number_value3"
                        style="@style/TextTableTitle.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:padding="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_length3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_number3">

                    <TextView
                        android:id="@+id/tv_length3"
                        style="@style/TextTableTitle"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Диаметр, мм" />

                    <TextView
                        android:id="@+id/tv_length_value3"
                        style="@style/TextTableTitle.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="5,5 – 22 мм" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card4"
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/card2"
            app:layout_constraintStart_toEndOf="@id/card3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_type4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_blue_background"
                    android:padding="20dp"
                    android:text="Проволока"
                    android:textAlignment="center"
                    android:textColor="@color/dark_font_grey"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <LinearLayout
                    android:id="@+id/linear_NTD4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_type4">

                    <TextView
                        android:id="@+id/tv_NTD4"
                        style="@style/TextTableTitle"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="НТД" />

                    <TextView
                        android:id="@+id/tv_NTD_value4"
                        style="@style/TextTableTitle.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingBottom="2dp"
                        android:text="ГОСТ 30136-95 \nASTM A510: \nSAE 1005-1015" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_number4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_NTD4">

                    <TextView
                        android:id="@+id/tv_number4"
                        style="@style/TextTableTitle"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Марка стали" />

                    <TextView
                        android:id="@+id/tv_number_value4"
                        style="@style/TextTableTitle.Value"
