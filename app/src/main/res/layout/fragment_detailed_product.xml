<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linear_for_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingStart="56dp"
        android:paddingEnd="56dp"
        android:paddingBottom="24dp"
        android:layout_margin="24dp"
        android:background="@drawable/background"
        >
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_main_picture"
            android:layout_width="wrap_content"
            android:layout_height="256dp"
            android:layout_gravity="center"
            android:src="@drawable/picture_loading"/>

        <TextView
            android:id="@+id/tv_product_title"
            style="@style/TextTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextDescriptionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ViewStub
            android:id="@+id/layout_stub"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_marka"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:text="МАРОЧНЫЙ АССОРТИМЕНТ">

        </TextView>

        <TextView
            android:id="@+id/tv_marka_value"
            style="@style/TextTableTitle.Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_font_grey">

        </TextView>

        <TextView
            android:id="@+id/tv_upakovka"
            style="@style/TextTableTitle.Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:text="УПАКОВКА, МАРКИРОВКА:">

        </TextView>

        <TextView
            android:id="@+id/tv_upakovka_value"
            style="@style/TextTableTitle.Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_font_grey">

        </TextView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>