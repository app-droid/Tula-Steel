<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextHeaderStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextTitleStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="singleLine">false</item>
        <item name="maxLines">2</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="singleLine">false</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextTableTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="singleLine">false</item>

    </style>

    <style name="TextTableTitle.Header">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/card_blue_background</item>
        <item name="android:textColor">@color/light_font_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="singleLine">false</item>

    </style>

    <style name="TextTableTitle.Value">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>




    <style name="CardViewStyleMainCategory">
        <item name="android:layout_width">389dp</item>
        <item name="android:layout_height">261dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#F0F0F0</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
    </style>










    <style name="TextHeaderStyle.Small">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36px</item>
    </style>

    <style name="TextHeaderStyle.Light">
        <item name="android:textColor">@color/light_font_grey</item>
    </style>

    <style name="TextHeaderStyle.ProductTitle">
        <item name="android:textColor">#F6F0F0</item>
        <item name="android:textSize">48px</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="singleLine">false</item>
    </style>

    <style name="TextStyleAbout">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">48px</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="TextStyleAbout.Small">
        <item name="android:textSize">24px</item>
    </style>

    <style name="TextStyleAbout.Dark">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBodyStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32px</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="singleLine">false</item>
    </style>

    <style name="TextMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingStart">@dimen/left_padding</item>
        <item name="android:paddingTop">@dimen/top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/top_bottom_padding</item>
        <item name="android:layout_marginTop">@dimen/top_margin_small</item>

    </style>

    <style name="TextProductTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F6F0F0</item>
        <item name="android:text">@string/production</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">32px</item>
        <item name="android:layout_marginLeft">@dimen/left_margin</item>


    </style>


    <style name="CardViewStyle">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>



    <style name="CardViewStyle.Blue">
        <item name="android:backgroundTint">@color/card_blue_background</item>
    </style>

    <style name="AppNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/AppNavigationViewItemTextAppearance</item>

    </style>
    <style name="AppNavigationViewItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
    <item name="android:textSize">36px</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#F0F0F0</item>
</style>

    <style name="RVStyle">
        <item name="android:layout_marginTop">@dimen/top_margin_average</item>
        <item name="android:layout_marginBottom">@dimen/top_margin_average</item>
        <item name="android:layout_marginLeft">@dimen/side_margin</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">3</item>

    </style><style name="RVStyle.Two">
    <item name="spanCount">2</item>

</style>

    <style name="TextContactStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28px</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#FFAB00</item>
        <item name="singleLine">false</item>
        <item name="itemMaxLines">2</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">100px</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textSize">28px</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:singleLine">false</item>
        <item name="itemMaxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>