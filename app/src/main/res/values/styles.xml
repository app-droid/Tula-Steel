<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextContactStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextHeaderStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">56px</item>
    </style>

    <style name="TextHeaderStyle.Light">
        <item name="android:textColor">@color/light_font_grey</item>
    </style>

    <style name="TextHeaderStyle.ProductTitle">
        <item name="android:textColor">#F6F0F0</item>
        <item name="android:textSize">48px</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="singleLine">false</item>
    </style>

    <style name="TextBodyStyle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_font_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32px</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/light_font_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingStart">@dimen/left_padding</item>
        <item name="android:paddingTop">@dimen/top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/top_bottom_padding</item>
        <item name="android:layout_marginTop">@dimen/top_margin_small</item>

    </style>

    <style name="TextProductTitle">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F6F0F0</item>
        <item name="android:text">@string/production</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">32px</item>
        <item name="android:layout_marginLeft">@dimen/left_margin</item>


    </style>


    <style name="CardViewStyle">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>
    <style name="CardViewStyle.Blue">
        <item name="android:backgroundTint">@color/card_blue_background</item>
    </style>

    <style name="AppNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/AppNavigationViewItemTextAppearance</item>

    </style>
    <style name="AppNavigationViewItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
    <item name="android:textSize">36px</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#F0F0F0</item>
</style>

    <style name="RVStyle">
        <item name="android:layout_marginTop">@dimen/top_margin_average</item>
        <item name="android:layout_marginBottom">@dimen/top_margin_average</item>
        <item name="android:layout_marginLeft">@dimen/side_margin</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">3</item>

    </style>




</resources>